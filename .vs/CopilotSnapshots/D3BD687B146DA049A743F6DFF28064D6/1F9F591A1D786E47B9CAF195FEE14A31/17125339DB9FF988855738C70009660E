  margin-right: -30px;
  /* Relative position for search icon */
  position: relative;
  /* Limit width to 40% of container */
  max-width: 40%;
}

/* Search icon styling */
.search-icon {
  /* Absolute position within search bar */
  position: absolute;
  /* Position from left edge */
  left: 12px;
  /* Center vertically */
  top: 50%;
  transform: translateY(-50%);
  /* Semi-transparent white color */
  color: rgba(255, 255, 255, 0.8);
  /* Reduce opacity for subtlety */
  opacity: 0.5;
  /* Larger icon size */
  font-size: 1.3em;
}

/* Search input field */
.search-bar input {
  /* Padding for text input */
  padding: 12px 20px;
  /* Full width of container */
  width: 100%;
  /* Minimum width constraint */
  min-width: 300px;
  /* Maximum width constraint */
  max-width: 500px;
  /* Remove default border */
  border: none;
  /* Rounded corners */
  border-radius: 8px;
  /* Standard font size */
  font-size: 1em;
  /* Smooth transition for hover/focus */
  transition: all 0.3s ease;
  /* Semi-transparent background */
  background-color: rgba(211, 211, 211, 0.3);
  /* Space for search icon */
  padding-left: 40px;
  /* White text color */
  color: white;
}

/* Placeholder text styling */
.search-bar input::placeholder {
  /* Semi-transparent white text */
  color: rgba(255, 255, 255, 0.8);
}

/* Focus state for search input */
.search-bar input:focus {
  /* Remove default outline */
  outline: none;
  /* Slightly more opaque background */
  background-color: rgba(211, 211, 211, 0.4);
  /* Remove box shadow */
  box-shadow: none;
}

